---
const {frontmatter} = Astro.props.work
---

<article class="flex flex-col items-center  lg:flex-row  mx-2 lg:mx-10 mb-10">
  <img src={frontmatter.image.url} alt={frontmatter.image.alt} class="flex w-50 h-40 lg:w-60 lg:h-50 rounded-md" />
  <div class="flex flex-col gap-2 w-[100%] lg:ml-2 lg:w-[60%]">
    <h2 class="font-bold">{frontmatter.title}</h2>
    <div class="flex gap-2">
      <span class="bg-dark-background text-white rounded-full px-2">{frontmatter.pubDate}</span>
      {frontmatter.tags.slice(0, 3).map((tag: string) => <span class="text-text-light">{tag}</span>)}
    </div>
    <p>{frontmatter.description}</p>
    <a class="flex self-end text-indigo-600 font-bold" href={frontmatter.url}>Read more</a>
  </div>
</article>